<Window x:Class="Task1Hard2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Root Approximation" Height="200" Width="400">
    <Grid>
        <Label Content="Введите число:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox Name="InputTextBox" HorizontalAlignment="Left" Height="23" Margin="110,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,10,0,0" Width="75" Click="OnCalculateClick"/>

        <Label Content="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <Label Name="ResultLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,50,0,0" Width="180" Height="23"/>
    </Grid>
</Window>
