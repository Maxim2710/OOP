        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Failsafe System" Height="350" Width="525">
    <Grid>
        <Button Content="Shutdown" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="50" Margin="10" Click="ShutdownSystem"/>
