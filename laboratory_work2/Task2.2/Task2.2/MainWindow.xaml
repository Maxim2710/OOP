<Window x:Class="Task2._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2._2"
        mc:Ignorable="d"
        Title="Task2" Height="350" Width="525">
    <Grid>
        <Label Content="Enter numbers (comma-separated):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="inputNumbers" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,40,0,0"/>
        <Button Content="Find GCD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="220,40,0,0" Click="FindGCD_Click"/>
        <Label Content="GCD Result:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <Label x:Name="resultGCD" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,90,0,0"/>
    </Grid>
</Window>
