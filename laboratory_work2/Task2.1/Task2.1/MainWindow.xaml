<Window x:Class="Task2._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task1" Height="200" Width="400">
    <Grid>
        <!-- Ввод данных для двух чисел -->
        <TextBox x:Name="firstNumber" Width="100" Height="24" Margin="10,38,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="secondNumber" Width="100" Height="25" Margin="10,92,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <!-- Кнопка для нахождения НОД для 2 чисел -->
        <Button Content="Find GCD (2 Integers)" Width="150" Height="30" Margin="150,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="FindGCD_Click" />

        <!-- Результат -->
        <Label x:Name="resultEuclid" Content="Euclid: 0" Width="150" Height="25" Margin="150,121,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="82"><Run Text="first number"/><Run Language="ru-ru" Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,67,0,0" TextWrapping="Wrap" Text="second number:" VerticalAlignment="Top"/>
    </Grid>
</Window>
